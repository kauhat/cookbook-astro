  "version": "0.2.0",
  "compounds": [
    {
      "name": "Run & debug",
      "configurations": ["Launch Chrome", "Run Astro dev server"],
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      }
    }
  ],
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "userDataDir": false
    },
    {
      "name": "Run Astro dev server",
      "request": "launch",
      "type": "node-terminal",
      "command": "./node_modules/.bin/astro dev --port 3000"
    }
  ]
}
