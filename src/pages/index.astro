---
import RecipePreview from '../components/RecipePreview.astro';
import {getAllRecipies} from '../data/recipies.ts'
import {Recipe} from '@cooklang/cooklang-ts'

let allRecipies = await getAllRecipies()
	// .map(function (recipe: Recipe) {
	// 	return { params: { recipe }};
	// });

// console.log(allRecipies)

// allRecipies = allRecipies.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="en">
	<head>
		<style>
			header {
				width: 100%;
				height: 100%;
				background-color: var(--theme-bg-offset);
				display: flex;
				align-items: center;
				justify-content: center;
			}

			.content {
				margin-top: 4rem;
				margin-bottom: 8rem;
			}

			.content :global(main > * + *) {
				margin-top: 1rem;
			}

			.intro {
				padding-bottom: 4rem;
				margin-bottom: 2rem;
				border-bottom: 4px solid var(--theme-divider);
			}

			.intro > * {
				margin: 0;
			}

			.latest {
				font-size: 2.5rem;
				font-weight: 700;
			}
		</style>
	</head>

	<body>
		<div class="wrapper">
			<main class="content">
				<section class="intro">
					<h1>Recipies</h1>
				</section>
				<section aria-label="Blog post list">
					{allRecipies.map((recipe: Recipe) => recipe && <RecipePreview recipe={recipe} />)}
				</section>
			</main>
		</div>
	</body>
</html>
